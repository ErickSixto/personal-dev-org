<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
          <property
        name="icon"
        type="String"
        label="Footer Icon URL"
        description="If skipped, default icon will be used"
      />
          <property name="iconLink" type="String" label="Icon Redirect Url" />
          <property
        name="backgroundColor"
        type="Color"
        default="rgb(44, 42, 41)"
        label="Background Color"
      />
          <property
        name="decorationColor"
        type="Color"
        default="rgb(236, 27, 36)"
        label="Decoration Color"
      />
          <property
        name="fontColor"
        type="Color"
        default="rgb(255,255,255)"
        label="Font Color"
      />

          <property
        name="footerText"
        type="String"
        default="Your confidence in commercial property"
        label="Footer text"
      />
    
        </targetConfig>
      </targetConfigs>
</LightningComponentBundle>
