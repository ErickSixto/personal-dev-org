<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>54.0</apiVersion>
  <isExposed>true</isExposed>
  <targets>

    <target>lightningCommunity__Page</target>
    <target>lightningCommunity__Default</target>

  </targets>

  <targetConfigs>
    <targetConfig targets="lightningCommunity__Default">
      <property
        name="backgroundColor"
        type="Color"
        default="rgb(255, 255, 255)"
        label="Background Color"
      />
      <property
        name="inactiveTabBackgroundColor"
        type="Color"
        default="rgb(245, 245, 245)"
        label="Inactive Tab Background Color"
      />
      <property
        name="hoverTabBackgroundColor"
        type="Color"
        default="rgb(249, 250, 251)"
        label="Hover on Tab Background Color"
      /> 
      <property
        name="tabFontColor"
        type="Color"
        default="rgb(11, 70, 126)"
        label="Tab Text Color"
      />
      <property
        name="fontColor"
        type="Color"
        default="rgb(128, 128, 128)"
        label="Text Color"
      />
      <property
        name="buttonBackgroundColor"
        type="Color"
        default="rgb(234, 91, 12)"
        label="Button Background Color"
      />
      <property
        name="buttonHoverBackgroundColor"
        type="Color"
        default="rgb(213, 79, 5)"
        label="Button Hover Background Color"
      />
      <property
        name="defaultRegister"
        type="Boolean"
        default='false'
        label="If selected, the preselected tab will be the Register tab. If not, the login tab will be preselected."
      />


    </targetConfig>
  </targetConfigs>
</LightningComponentBundle>
